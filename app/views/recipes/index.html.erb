<div class="row mt-5">
    <div class="col-lg-12">
        <h1 class="page-header"><%= pluralize(@recipes.size, 'Receita','Receitas') %>
            <small class="float-right btn btn-outline-danger">
                <%= link_to "Nova Receita", new_recipe_path %>
            </small>
        </h1>
    </div>
</div>
<div class="row listaReceitasImg">
    <% @recipes.each do |recipe| %>
        <div class="col-xs-12 col-sm-4 col-md-3">
            <div class="card">
                <%= link_to imagem(recipe), recipe %>
                <div class="card-body">
                    <h4 class="card-title"><%= link_to recipe.name , recipe %></h4>
                    <p class="card-text"><%= truncate(recipe.stuff, lenght: 15 , separator: '') %></p>
                    <h5>Calorias:</h5>
                    <p><%= formata_caloria(recipe) %></p>
                    <h5>Tempo de preparo:</h5>
                    <p><%= recipe.duration.to_formatted_s(:time) %></p>
                    <h5>Custo:</h5>
                    <p><%= number_to_currency(recipe.cost) %></p>
                </div>
            </div>
        </div>
    <% end %>
</div>